<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>organisation-publisher</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>at.graz.meduni.liferay.portlet.bibbox.organisation.OrganisationPublisherConfig</configuration-action-class>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			organisation-publisher-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>people</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>at.graz.meduni.liferay.portlet.bibbox.user.PeopleConfig</configuration-action-class>
		<render-weight>0</render-weight>
		<ajaxable>true</ajaxable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>people-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>organisation-lister</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>at.graz.meduni.liferay.portlet.bibbox.organisation.OrganisationListerConfig</configuration-action-class>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			organisation-lister-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>invitation</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>at.graz.meduni.liferay.portlet.bibbox.user.InvitationConfig</configuration-action-class>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
	    <friendly-url-mapping>invitation</friendly-url-mapping>
	    <friendly-url-routes>at/graz/meduni/liferay/portlet/bibbox/user/invitation-friendly-url-routes.xml</friendly-url-routes>
		<render-weight>0</render-weight>
		<ajaxable>true</ajaxable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>invitation-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>