		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>create-patient-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>patient</portlet-name>
		<icon>/icon.png</icon>
