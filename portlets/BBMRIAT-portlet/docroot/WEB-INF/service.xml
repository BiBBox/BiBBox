<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="at.meduni.liferay.portlet.bbmriat">
	<author>Robert Reihs</author>
	<namespace>bbmriat</namespace>

	<entity name="DDLLinkingTable" local-service="true" remote-service="false" table="bbmriat.ddllinkingtable">

		<!-- PK fields -->

		<column name="ddllinkingtable" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="recordid" type="long" />
		<column name="recordsetid" type="long" />
		<column name="linkrecordid" type="long" />

		<!-- Order -->

		<order by="asc">
			<order-column name="recordid" />
		</order>

		<!-- Finder methods -->

		<finder name="Recordid" return-type="Collection">
			<finder-column name="recordid" />
		</finder>
		<finder name="RecordsByRecordset" return-type="Collection">
         <finder-column name="recordid" />
         <finder-column name="recordsetid" />
      </finder>
	</entity>
	
	<entity data-source="ylogDataSource" local-service="true" name="History" table="history" remote-service="false" session-factory="ylogSessionFactory" tx-manager="ylogTransactionManager">
		<column name="historyId" db-name="id" type="long" primary="true" />
		<column name="action" type="long" />
		<column name="time" type="Date" />
		<column name="histo_id" type="long" />
		<column name="workplace_id" type="long" />
		<column name="order_id" type="long" />
	</entity>
</service-builder>
